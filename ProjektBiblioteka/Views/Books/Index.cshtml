@model ProjektBiblioteka.Models.Books.BooksViewModel
@{
    ViewData["Title"] = "Książki";
}

@if (Model.Books.Any())
{
<div class="text-center m-3 text-center">
<h1 class="display-3">Lista książek</h1>
        <a class="btn btn-primary p-3" asp-controller="Books" asp-action="AddBook"><i class="fa-solid fa-plus me-3"></i>Dodaj nową książkę</a>
</div>
<table class="table table-hover">
    <thead  class="text-center">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tytuł</th>
            <th scope="col">Kategoria</th>
            <th scope="col">Autor</th>
            <th scope="col">Rok napisania</th>
            <th scope="col">Pages</th>
            <th scope="col">Opis</th>
            <th scope="col">Akcje</th>
        </tr>
    </thead>
    <tbody class="text-center ">
            @foreach (var item in Model.Books)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Title</th>
                <th>@item.Category</th>
                <th>@item.Author</th>
                <th>@item.Year</th>
                <th>@item.Pages</th>
                <th>@item.Description</th>
                <th>
                    <div class="d-flex gap-1 justify-content-center">
                        <form class=" float-left" method="post" asp-action="RemoveBook" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash me-2"></i>Usuń</button>
                        </form>
                        <a class="btn btn-warning float-right" asp-controller="Books" asp-action="EditBook"
                            asp-route-id="@item.Id"
                            asp-route-title="@item.Title"
                            asp-route-description="@item.Description"
                            asp-route-category="@item.Category"
                            asp-route-pages="@item.Pages"
                            asp-route-author="@item.Author"
                            asp-route-year="@item.Year"><i class="fa-solid fa-pen me-2"></i>Edytuj
                        </a>
                    </div>
                </th>
            </tr>
        }
    </tbody>
</table>
}
else{
<div class="text-center">
    <p class="display-4">Dodaj książkę</p>
        <a class="btn btn-primary" asp-controller="Books" asp-action="AddBook"><i class="fa-solid fa-plus me-1"></i>Dodaj</a>
</div>
}