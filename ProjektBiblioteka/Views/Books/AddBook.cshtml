@using ProjektBiblioteka.Services.Books;
@model ProjektBiblioteka.Models.Books.BookModel
@inject IBooksService _bookService
@{
    ViewData["Title"] = "Dodaj książkę";
}

<form method="post" asp-controller="Books" asp-action="AddBook">
    <div class="form-group">
        <label for="title">Tytuł</label>
        <input asp-for="Title" class="form-control" type="text" id="title" placeholder="Tytuł" name="title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="description">Opis</label>
        <input asp-for="Description" class="form-control" type="text" id="description" placeholder="Opis" name="description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="category">Kategoria</label>
        <div class="dropdown">
            <select class="dropdown-header w-100" asp-for="Category" asp-items="@(await _bookService.populateSelectList())">
                <option value="" class="dropdown-item">Wybierz kategorie</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="author">Autor</label>
        <input asp-for="Author" class="form-control" type="text" id="author" placeholder="Autor" name="author" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="pages">Ilość stron</label>
        <input asp-for="Pages" class="form-control" type="number" id="pages" placeholder="Ilość stron" name="pages" />
        <span asp-validation-for="Pages" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="year">Rok napisania</label>
        <input asp-for="Year" class="form-control" type="number" id="year" placeholder="Rok napisania" name="year" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="text-center m-5">
        <a asp-action="Index" class="btn btn-outline-danger"><i class="fa-solid fa-arrow-left me-1"></i>Cofnij</a>
        <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus me-1"></i>Dodaj książkę</button>
    </div>
</form>
